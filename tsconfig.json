{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@icons/*": ["icons/*"],
      "@styles/*": ["styles/*"],
      "@type/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@fonts/*": ["fonts/*"]
    }
  },
  "include": ["./src/**/*"]
}
